# =======================================
# このファイルの名前を `.env` に変えてから使ってください！
# =======================================

# 🔧 必須：あなたの GCP プロジェクト情報を入力！
export PROJECT_ID="ここにGCPのプロジェクトIDを入力"
export TF_BACKEND_BUCKET="n8n-tfstate-CHANGE_ME"

# 📍 地域設定（東京リージョンをそのまま使うなら変更不要）
export REGION="asia-northeast1"       # 東京リージョン
export ZONE="asia-northeast1-a"       # 東京リージョン内のゾーン

# 📦 Terraform が使う変数（上の値をそのまま利用）
export TF_VAR_project_id="${PROJECT_ID}"
export TF_VAR_region="${REGION}"
export TF_VAR_zone="${ZONE}"

# 🔐 Secret Manager に保存する値の「名前」（そのままでOK）
export TF_VAR_db_host_secret_id="db-host"
export TF_VAR_db_user_secret_id="db-user"
export TF_VAR_db_password_secret_id="db-password"
export TF_VAR_encryption_key_secret_id="encryption-key"